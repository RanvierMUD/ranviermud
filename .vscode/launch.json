    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\ranvier",
            "args": ["-v"],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Mocha Test (Debug)",
            "program": "${workspaceRoot}\\node_modules\\mocha\\bin\\_mocha",
            "args": ["**/*.js", "--no-timeouts"],
            "stopOnEntry": false,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}\\test"
            

        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}